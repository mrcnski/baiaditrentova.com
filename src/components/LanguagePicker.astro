---

import { languages } from '@i18n/ui';
import { getLangFromUrl, urlToLangPath } from '@i18n/utils';
const pageLang = getLangFromUrl(Astro.url);
---

<div class="language-picker">
    {Object.entries(languages).map(([lang, label]) => (
        <a class={"lang-link hover" + ((pageLang === lang) ? " lang-link-active" : "")}
            href={urlToLangPath(Astro.url, lang as keyof typeof languages)}
            title={label}
            >
            <span class="lang-link-inner">{lang}</span>
        </a>
        <span>{(lang != "en") ? "|" : "" }</span>
    )) }
</div>

<style lang="less">
    .language-picker {
        display: flex;
        flex-direction: row;
        align-items: center;

        margin: 0 2rem;

        @media (max-width: 700px) {
            margin: 0 1rem;
        }
    }

    .lang-link {
        padding: 0.25rem 0.5rem;
        border-bottom: 1px solid transparent;

        text-decoration: none;
        color: var(--brown-dk);

        @media (max-width: 700px) {
            font-size: 0.85em;
        }

        .lang-link-inner {
            text-align: center;
            font-weight: normal;
            text-transform: uppercase;

            @media (max-width: 700px) {
                font-size: 1em;
            }
        }
    }

    .lang-link-active .lang-link-inner {
        border-bottom: 1.5px solid var(--blue)
    }
</style>